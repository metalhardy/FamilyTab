<!DOCTYPE html>
<html>
<head>
  <title><%= title(yield(:page)) %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>
<body>
	<% if bao_bao_signed_in? %>
		<div class="header">
			<div class="container">
				<%= render 'layouts/header' %>
			</div>
		</div>
		<div id="wrap" class="content">
			<div id="main">
				<div class="container">
					<%= yield %>
				</div>
			</div>
		</div>
		<div class="footer">
			<div class="container">
				<%= render 'layouts/footer' %>
			</div>
		</div>
	<% else %>
		<div id="wrap" class="content" style="padding-top: 5%;">
			<div id="main">
				<div class="container">
					<% if flash[:alert] %>
						<div class="alert alert-danger fade in">
							<a class="close" href="#" data-dismiss="alert">Ã—</a>
							<%= flash[:alert ]%>
						</div>
					<% end %>

					<%= yield %>
					
				</div>
			</div>
		</div>
	<% end %>

</body>
</html>
