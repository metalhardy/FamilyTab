<% if bao_bao_signed_in? %>
	<% provide(:page, "Home") %>

	<h1>You are signed in! <%= current_bao_bao.email %></h1>
	<%= link_to 'sign out', destroy_bao_bao_session_path, method: :delete %>

<% else %>

	<div class="row">
		<div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
			<h1>Bao Bao House</h1>
			<div class="form-background">
				<%= render 'forms/login' %>
			</div>
		</div>
	</div>
<% end %>
